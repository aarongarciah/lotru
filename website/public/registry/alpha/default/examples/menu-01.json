  "files": [
    {
      "path": "examples/menu-01.tsx",
      "content": "import * as React from \"react\";\nimport { css } from \"@pigment-css/react\";\nimport {\n  ChevronRightIcon,\n  LogOutIcon,\n  MailIcon,\n  MessageSquareIcon,\n  PlusCircleIcon,\n  SettingsIcon,\n  UserIcon,\n  UserPlusIcon,\n  UsersIcon,\n} from \"lucide-react\";\n\nimport { Button } from \"@/components/ui/button\";\nimport {\n  Menu,\n  MenuContent,\n  MenuGroup,\n  MenuItem,\n  MenuLabel,\n  MenuPositioner,\n  MenuSeparator,\n  MenuShortcut,\n  MenuTrigger,\n} from \"@/components/ui/menu\";\n\nexport default function MenuExample(): React.JSX.Element {\n  return (\n    <Menu>\n      <MenuTrigger render={<Button variant=\"outline\">Open</Button>} />\n      <MenuPositioner side=\"bottom\" alignment=\"center\">\n        <MenuContent className={css({ width: \"14rem\" })}>\n          <MenuLabel>My Account</MenuLabel>\n          <MenuSeparator />\n          <MenuGroup>\n            <MenuItem>\n              <UserIcon />\n              <span>Profile</span>\n              <MenuShortcut>⇧⌘P</MenuShortcut>\n            </MenuItem>\n            <MenuItem>\n              <SettingsIcon />\n              <span>Settings</span>\n              <MenuShortcut>⌘S</MenuShortcut>\n            </MenuItem>\n          </MenuGroup>\n          <MenuSeparator />\n          <MenuGroup>\n            <MenuItem>\n              <UsersIcon />\n              <span>Team</span>\n            </MenuItem>\n            <Menu>\n              <MenuTrigger\n                render={\n                  <MenuItem>\n                    <UserPlusIcon />\n                    <span>Invite users</span>\n                    <ChevronRightIcon className={css({ marginInlineStart: \"auto\" })} />\n                  </MenuItem>\n                }\n              />\n              <MenuPositioner side=\"right\" alignment=\"start\">\n                <MenuContent>\n                  <MenuItem>\n                    <MailIcon />\n                    <span>Email</span>\n                  </MenuItem>\n                  <MenuItem>\n                    <MessageSquareIcon />\n                    <span>Message</span>\n                  </MenuItem>\n                  <MenuSeparator />\n                  <MenuItem>\n                    <PlusCircleIcon />\n                    <span>More</span>\n                  </MenuItem>\n                </MenuContent>\n              </MenuPositioner>\n            </Menu>\n            <MenuItem disabled>\n              <PlusCircleIcon />\n              <span>New team</span>\n            </MenuItem>\n          </MenuGroup>\n          <MenuSeparator />\n          <MenuGroup>\n            <MenuItem>\n              <LogOutIcon />\n              <span>Log out</span>\n              <MenuShortcut>⇧⌘Q</MenuShortcut>\n            </MenuItem>\n          </MenuGroup>\n        </MenuContent>\n      </MenuPositioner>\n    </Menu>\n  );\n}\n"
    }
  ]
}